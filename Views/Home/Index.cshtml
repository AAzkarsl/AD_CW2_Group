@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/Front/_Layout.cshtml";
}

	<div class="" style="height: 90vh; display: flex; align-items: center; justify-content: center;">
        <div class="container text-center">
            <div class="contentbox">
                <h1>Order <span>Online</span> and</h1>
                <h1>Get the books <span>Delivered</span></h1>
                <h1>To your <span>Doorstep</span></h1>
                <a class="shopbtn" asp-route="Shop">Buy Books</a>
            </div>

            <form id="search_mini_form" class="minisearch" method="get" asp-controller="Home" asp-action="Shop">
                <div class="field__search">
                    <input type="text" name="search" value='@ViewData["search"]' placeholder="Search Book at our store here...">
                    <div class="action">
                        <a onclick="document.getElementById('search_mini_form').submit();"><i class="zmdi zmdi-search"></i></a>
                    </div>
                </div>
            </form>
        </div>
	</div>

    <!-- Start Best Seller Area -->
		<section class="wn__product__area brown--color pt--50  pb--30">
			<div class="container">
				<div class="row">
					<div class="col-lg-12">
						<div class="section__title text-center">
							<h2 class="title__be--2">Latest Books in Store</h2>
						</div>
					</div>
				</div>
				<!-- Start Single Tab Content -->
				<div class="furniture--4 border--round owl-carousel owl-theme row mt--20">
					@foreach (var item in @ViewBag.newBooks)
					{
					<div class="product product__style--3">
						<div class="col-lg-3 col-md-4 col-sm-6 col-12">
							<div class="product__thumb">
								<a class="first__img" asp-action="BookView" asp-route-slug="@item.Slug"><img src="@item.Image" class="product_image" alt="@item.Name"></a> 
								<div class="hot__box">
									<span class="hot-label">Recent</span>
								</div>
							</div>
							<div class="product__content content--center">
								<h4><a asp-route="BookView" asp-route-slug="@item.Slug">@item.Name</a></h4>
								<ul class="prize d-flex">
									<li> &nbsp; &nbsp; Rs. @item.Price</li>
								</ul>
							</div>
						</div>
					</div>
					}
				</div>
			</div>
		</section>
		<!-- Start BEst Seller Area -->
