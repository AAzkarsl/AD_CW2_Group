@model IEnumerable<ebook_cw.Data.ViewModels.BookReportViewModel>
@using System.Globalization

@{
    ViewData["Title"] = "Books Report";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
    var cultureInfo = new CultureInfo("si-LK");
}

<style>
    #logoImage {
        width: 150px;
    }

    #ReportContent a {
        color: #000;
        text-decoration: none;
    }
</style>


<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a><i>Books Report</i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                        <li><i id="exportPDF" class="la la-print"></i></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body" id="ReportContent">
                    <header class="clearfix pb--50 " style="padding: 30px 0;">
                        <h2>Books Report</h2>
                        <div id="logo" class="pb--30 logo-ebook">
                            <img id="logoImage" src="~/images/logo/ebook.lk-logo.svg">
                        </div>
                        <div id="company" class="clearfix">
                            <div><b>EBook.lk</b></div>
                            <div>No. 3</div>
                            <div>De Fonseka Place, Colombo 3</div>
                            <div>+94766695474</div>
                            <div><a href="mailto:info@ebook_cw.lk">info@ebook_cw.lk</a></div>
                        </div>

                    </header>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="service">ID</th>
                                    <th class="desc">Book Name</th>
                                    <th>PRICE</th>
                                    <th>QTY Sold</th>
                                    <th>TOTAL Revenue</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var book in Model)
                                {
                                    <tr>
                                        <td class="service">@book.Id</td>
                                        <td class="desc">@book.Name</td>
                                        <td class="unit">@book.Price.ToString("C", cultureInfo)</td>
                                        <td class="qty">@book.QuantitySold</td>
                                        <td class="total">@book.TotalRevenue.ToString("c", cultureInfo)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

