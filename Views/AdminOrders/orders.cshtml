@model List<ebook_cw.Models.Order>

@{
    ViewData["Title"] = "List of Orders";
    ViewData["Head"] = "Orders Management";
    ViewData["Orders"] = "active";
    Layout = "~/Views/Shared/Admin/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <a class="heading-elements-toggle"><i class="la la-ellipsis-v font-medium-3"></i></a>
                <div class="heading-elements">
                    <ul class="list-inline mb-0">
                        <li><a><i>Orders List</i></a></li>
                        <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="card-content collapse show">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Order ID</th>
                                    <th>Items</th>
                                    <th>Total Price</th>
                                    <th>Status</th>
                                    <th>Order Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 0;
                                }
                                @foreach (var item in Model)
                                {
                                    i++;
                                    int f = 0;
                                    <tr>
                                        <th scope="row">@i</th>
                                        <td>@item.Id</td>
                                        <td>
                                            @foreach (var order in item.OrderItems)
                                            {
                                                f++;
                                                <i>@f. @order.Book.Name</i>
                                                <br>
                                            }
                                        </td>
                                        <td>@item.OrderItems.Select(b => b.Book.Price * b.Amount).Sum().ToString("C")</td>
                                        <td>@item.OrderStatus</td>
                                        <td>@item.CreatedDate.ToString("yyyy-MM-dd")</td>

                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary"><i class="la la-pencil-square">&nbsp;Edit&nbsp;</i></a>
                                            <a asp-action="DeleteOrder" asp-route-id="@item.Id" class="btn btn-outline-danger"> <i class="la la-trash"> Delete</i> </a>
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info"><i class="la la-eye">&nbsp;View&nbsp;</i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
